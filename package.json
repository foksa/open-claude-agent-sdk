{
  "name": "@lite-claude/agent-sdk",
  "version": "0.0.0",
  "description": "A lightweight alternative to Claude Agent SDK - 70x smaller, uses local CLI",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tools": {
      "bun": "./src/tools/index.ts",
      "import": "./dist/tools/index.js",
      "types": "./dist/tools/index.d.ts"
    },
    "./mcp": {
      "bun": "./src/mcp/index.ts",
      "import": "./dist/mcp/index.js",
      "types": "./dist/mcp/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "test": "bun test",
    "test:unit": "bun test tests/unit/",
    "test:hooks": "bun test tests/integration/hooks.test.ts",
    "test:permissions": "bun test tests/integration/permissions.test.ts",
    "test:query": "bun test tests/integration/query.test.ts",
    "test:multi-turn": "bun test tests/integration/multi-turn.test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "ci": "bun run typecheck && bun run check && bun run test && bun run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "anthropic",
    "sdk",
    "bun"
  ],
  "engines": {
    "bun": ">=1.3.0"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.30.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.30",
    "@biomejs/biome": "^2.3.13",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.8",
    "playwright": "^1.58.1",
    "typescript": "^5.9.3"
  }
}
